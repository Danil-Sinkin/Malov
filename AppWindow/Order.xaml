<Window x:Class="AppWindow.Order"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppWindow"
        mc:Ignorable="d"
        Title="Order" Height="550" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
            <ListBox x:Name="listOrder" ItemsSource="{Binding OrderList}" BorderBrush="{x:Null}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock FontSize="16" Text="{Binding Path=Name}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                                <Label Content="-" FontSize="16" FontWeight="Bold" Margin="5,0,5,0" VerticalAlignment="Stretch" HorizontalAlignment="Center"></Label>
                                <TextBlock x:Name="CountProduct" FontSize="16" Text="{Binding Path=CountProduct}" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                                <Label Content="-" FontSize="16" FontWeight="Bold" Margin="5,0,5,0" HorizontalAlignment="Center" VerticalAlignment="Stretch"></Label>
                                <TextBlock x:Name="Price" Text="{Binding Path=Price}" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"></TextBlock>
                            </StackPanel>
                            
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
            <TextBlock Text="Итоговая цена:" FontFamily="Arial Black" FontSize="20" Margin="2"/>
            <TextBlock Text="{Binding Path=FinalPrice}" FontFamily="Arial Black" FontSize="20" Margin="2"></TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="orders" Content="Заказы" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Padding="5" FontSize="20" Background="{x:Null}" FontFamily="Arial Black" Panel.ZIndex="-3" BorderBrush="Black" Click="orders_Click"/>
            <Button x:Name="back" Content="Вернуться" HorizontalAlignment="Left"  Margin="5" VerticalAlignment="Top" Padding="5" FontSize="20" Background="{x:Null}" FontFamily="Arial Black" BorderBrush="Black"  Click="back_Click"/>
        </StackPanel>
    </Grid>
</Window>
